@prefix : <http://cognita.io/poderoEditor/layoutOntology/> .
@prefix owl:  <http://www.w3.org/2002/07/owl#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#>.
@prefix poder:         <http://poderopedia.com/vocab/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

#################
### EXAMPLES  ###
#################


<#basicView> a :FormView ;
			:classAssociated foaf:Person ;
			:hasWidget [ a :HTMLInputTextWidget, :HTMLWidget;
          				:predicateDisplayed foaf:firstName;
		  				:positionNumber 0;
		  				:anchoredTo "myForm" 
		  			   ],
		  			   [ a :HTMLInputTextWidget, :HTMLWidget;
		  				:predicateDisplayed foaf:familyName;
		  				:positionNumber 1;
		  				:anchoredTo "myForm" 
		  			   ],
		  			   [ a :HTMLInputCalendarWidget, :HTMLWidget;
		  				:predicateDisplayed foaf:birthday;
		  				:positionNumber 2;
		  				:anchoredTo "myForm" 
		  			   ],
		  			   [ a :HTMLResourceWidget, :HTMLWidget;
						   :predicateDisplayed poder:countryOfResidence ;
						   :positionNumber 3;
						   :anchoredTo "myForm"
					   ] ;
			:hasSubView [
						a :FormView ;
						:classAssociated poder:Marriage ;
						:hasWidget [ a :HTMLInputTextWidget;
									 :predicateDisplayed poder:connectionStartDate;
									 :positionNumber 1;
									 :anchoredTo "myForm"
								   ],
								   [ a :HTMLInputTextWidget;
									 :predicateDisplayed poder:connectionEndDate;
									 :positionNumber 2;
									 :anchoredTo "myForm"
								   ],
								   [ a :HTMLInputTextWidget;
									 :predicateDisplayed poder:hasSpouse;
									 :positionNumber 1;
									 :anchoredTo "myForm"
								   ]
						]
.
